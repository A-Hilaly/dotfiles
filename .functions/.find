#!/bin/bash

function gofind () {
    opt="$1"
    f="$2"
    dir="$3"
    if [ "$opt" = "--home" ] || [ "$opt" = "home" ]; then
        find "$HOME" -name "$f"
    elif [ "$opt" = "--here" ] || [ "$opt" = "here" ]; then
        find "$PWD" -name "$f"
    elif [ "$opt" = "--all" ] || [ "$opt" = "all" ]; then
        find / -name "$f"
    else
        find "$f" -name "$dir"
    fi
}

$@
