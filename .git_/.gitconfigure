#!/bin/bash

source $DOTFILES/.utils/json_utils import extract_from_json


function configure_git_credentials () {
    # Configure Git Credentials
    username = $(extract_from_json $DOTFILESSETTINGS .git.user)
    mail = $(extract_from_json $DOTFILESSETTINGS .git.mail)
    editor= $(extract_from_json $DOTFILESSETTINGS .git.editor)

    echo "Reconfiguration git config --global using $DOTFILESSETTINGS"

    if [ ! "$username" = "" ]; then
        git config --global user.name "$username"
        echo "User name configured ($username)"
    fi
    if [ ! "$mail" = "" ]; then
        git config --global user.mail "$mail"
        echo "User mail configured ($mail)"

    fi
    if [ ! "$editor" = "" ]; then
        git config --global core.editor $editor
        echo "Git editor configured ($editor)"
    fi

}
